@{
    ViewBag.Title = "Booking Confirmed";
}

@Html.Partial("_Header")

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card confirmation-card text-center p-5">
                <h2 class="text-success mb-3">🎉 Appointment Confirmed!</h2>

                <p class="text-muted mb-4">
                    Your appointment has been booked successfully.
                </p>

                <div>
                    <a href="@Url.Action("Index", "Home")"
                       class="btn background-primary text-white px-4 me-2">
                        Back to Home
                    </a>

                    <a href="@Url.Action("Appointments", "Appointment")"
                       class="btn btn-outline-secondary px-4">
                        View My Appointments
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .confirmation-card {
        border-radius: 20px;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
        border: none;
    }
</style>

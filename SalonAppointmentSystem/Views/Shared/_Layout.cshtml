<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
    <style>
        .color-primary {
            color: #5A189A;
        }

        .background-primary {
            background: linear-gradient(135deg, #2E003E, #5A189A);
            color: white;
            transition: background 0.3s ease;
        }

        .btn-hover:hover {
            /*            background: linear-gradient(135deg, #004E64, #00A5CF);*/
            background: linear-gradient(135deg, #B8860B, #FFD700);
            /*      : linear-gradient(135deg, #004B23, #1B9C85);*/
            color: white;
        }

        .color-light {
            color: #f5e9ff; /* readable on purple gradient */
        }

        .text-soft {
            color: rgba(255, 255, 255, 0.8);
        }

        .stylist-card {
            border-radius: 16px;
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.25);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .stylist-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 40px rgba(0, 0, 0, 0.35);
            }

        .btn-outline-primary {
            color: #f5e9ff;
            border-color: #c77dff;
        }

        .btn-primary {
            background: linear-gradient(135deg, #c77dff, #9d4edd) !important;
            border: none;
        }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #c77dff, #9d4edd);
            color: #2E003E;
            border-color: transparent;
        }

        .btn-warning {
            background: linear-gradient(135deg, #f9c74f, #f9844a);
            border: none;
            color: #2E003E;
        }

            .btn-warning:hover {
                background: linear-gradient(135deg, #ffd166, #ffb703);
                color: #2E003E;
            }

        .btn-outline-danger {
            color: #ffccd5;
            border-color: #ff758f;
        }

            .btn-outline-danger:hover {
                background: linear-gradient(135deg, #ff4d6d, #ff758f);
                color: white;
                border-color: transparent;
            }

        /*Service-Page*/
        .service-card {
            border-radius: 16px;
            background: #fff;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .service-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 40px rgba(0, 0, 0, 0.12);
            }

        .service-title {
            color: #2E003E;
            letter-spacing: 0.3px;
        }

        .text-muted {
            color: #6c757d !important;
        }

/*        appointment list*/
        #appointmentsTable thead th {
            background: linear-gradient(135deg, #2E003E, #5A189A);
            color: #ffffff;
            border-right: 1px solid rgba(255,255,255,0.2);
            border-left: none;
            border-top: none;
            border-bottom: none;
        }

            #appointmentsTable thead th:focus,
            #appointmentsTable thead th:active {
                outline: none !important;
                box-shadow: none !important;
            }
    </style>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Html.Partial("_BookingModal")
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        //$(document).ready(function () {
        //    debugger
        //});
    </script>
</body>
</html>
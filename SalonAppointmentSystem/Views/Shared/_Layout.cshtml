<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        .color-primary {
            color: #5A189A;
        }

        .background-primary {
            background: linear-gradient(135deg, #2E003E, #5A189A);
            color: white;
            transition: background 0.3s ease;
        }

        .btn-hover:hover {
            /*            background: linear-gradient(135deg, #004E64, #00A5CF);*/
            background: linear-gradient(135deg, #B8860B, #FFD700);
            /*      : linear-gradient(135deg, #004B23, #1B9C85);*/
            color: white;
        }

        .color-light {
            color: #f5e9ff; /* readable on purple gradient */
        }

        .text-soft {
            color: rgba(255, 255, 255, 0.8);
        }

        .stylist-card {
            border-radius: 16px;
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.25);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .stylist-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 40px rgba(0, 0, 0, 0.35);
            }

        .btn-outline-primary {
            color: #f5e9ff;
            border-color: #c77dff;
        }

        .btn-primary {
            background: linear-gradient(135deg, #c77dff, #9d4edd) !important;
            border: none;
        }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, #c77dff, #9d4edd);
            color: #2E003E;
            border-color: transparent;
        }

        .btn-warning {
            background: linear-gradient(135deg, #f9c74f, #f9844a);
            border: none;
            color: #2E003E;
        }

            .btn-warning:hover {
                background: linear-gradient(135deg, #ffd166, #ffb703);
                color: #2E003E;
            }

        .btn-outline-danger {
            color: #ffccd5;
            border-color: #ff758f;
        }

            .btn-outline-danger:hover {
                background: linear-gradient(135deg, #ff4d6d, #ff758f);
                color: white;
                border-color: transparent;
            }

        /*Service-Page*/
        .service-card {
            border-radius: 16px;
            background: #fff;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .service-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 18px 40px rgba(0, 0, 0, 0.12);
            }

        .service-title {
            color: #2E003E;
            letter-spacing: 0.3px;
        }

        .text-muted {
            color: #6c757d !important;
        }

        /*        appointment list*/
        /*        #appointmentsTable thead th {
            background: linear-gradient(135deg, #2E003E, #5A189A);
            color: #ffffff;
            border-right: 1px solid rgba(255,255,255,0.2);
            border-left: none;
            border-top: none;
            border-bottom: none;
        }*/
        #appointmentsTable {
            border-radius: 12px;
            overflow: hidden;
        }

            #appointmentsTable thead th:focus,
            #appointmentsTable thead th:active {
                outline: none !important;
                box-shadow: none !important;
            }

        .cancel-badge {
            cursor: pointer;
            transition: background-color 0.2s ease, transform 0.15s ease;
        }

            .cancel-badge:hover {
                background-color: #bb2d3b;
                transform: scale(1.05);
            }

        .dashboard-title {
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .dashboard-subtitle {
            color: #777;
            font-size: 15px;
        }

        .dashboard-card {
            border: none;
            border-radius: 18px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        }

            .dashboard-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            }

            .dashboard-card .card-header {
                font-weight: 600;
                font-size: 1.1rem;
                padding: 18px;
                color: white;
                border: none;
            }

        .gradient-purple {
            background: linear-gradient(135deg, #5f2c82, #8a2be2);
        }

        .gradient-blue {
            background: linear-gradient(135deg, #2193b0, #6dd5ed);
        }

        .gradient-green {
            background: linear-gradient(135deg, #11998e, #38ef7d);
        }

        .gradient-orange {
            background: linear-gradient(135deg, #ff9966, #ff5e62);
        }

        .gradient-dark {
            background: linear-gradient(135deg, #232526, #414345);
        }

        .dashboard-btn {
            border-radius: 30px;
            padding: 8px 20px;
            font-weight: 500;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: 800;
            /*                background: linear-gradient(90deg, #3b044e, #9c64d0, #8b090c);*/
            background: linear-gradient(90deg, #3b044e, #9c64d0, #8b090c);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .salon-title {
            font-size: 3.5rem;
            font-weight: 800;
            /*                background: linear-gradient(90deg, #3b044e, #9c64d0, #8b090c);*/
            background: linear-gradient(90deg, #3b044e, #9c64d0, #8b090c);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .salon-brand {
            font-weight: 800;
            /*                background: linear-gradient(90deg, #3b044e, #9c64d0, #8b090c);*/
            background: linear-gradient(90deg, #3b044e, #9c64d0, #8b090c);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .username {
            font-weight: 900;
        }

        .hero-subtitle {
            font-size: 1rem;
            color: #6c757d;
            letter-spacing: 0.5px;
        }

       
        /*            Customer Details*/
        /* Space below top controls */
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_length {
            margin-bottom: 20px;
        }

            /* Style search input */
            .dataTables_wrapper .dataTables_filter input {
                border-radius: 20px;
                border: 1px solid #ccc;
                padding: 6px 12px;
            }

        /* Rounded table */
        #customerTable {
            border-radius: 12px;
            overflow: hidden;
        }

        /* Better header color */
        .table-dark th {
            background: linear-gradient(45deg, #5f2c82, #9c27b0);
            border: none;
        }

        /* Row hover effect */
        .table-hover tbody tr:hover {
            background-color: #f3e5f5;
            transition: 0.2s ease-in-out;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.previous,
        .dataTables_wrapper .dataTables_paginate .paginate_button.next {
            color: white !important;
        }
        /* Previous & Next text color */
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            color: white !important;
        }

            /* On hover */
            .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                color: white !important;
                background: rgba(255, 255, 255, 0.15) !important;
                border: none !important;
            }

            /* Active page button */
            .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                color: white !important;
                background: rgba(255, 255, 255, 0.25) !important;
                border: none !important;
            }

        .dataTables_wrapper .dataTables_length select {
            border-radius: 10px;
            padding: 4px 8px;
            background-color: white;
            color: black;
        }


        
    </style>
</head>
<body>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Html.Partial("_BookingModal")
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        //$(document).ready(function () {
        //    debugger
        //});
    </script>
</body>
</html>
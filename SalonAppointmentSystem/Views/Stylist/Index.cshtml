@model IEnumerable<SalonAppointmentSystem.Models.ViewModels.StylistVM>

@{
    ViewBag.Title = "Stylists";
}
@Html.Partial("_Navbar")
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold color-primary">✂️ Stylists</h2>
        <a href="@Url.Action("AddOrEditStylist", "Stylist")"
           class="btn btn-hover background-primary px-4">
            ➕ Add New Stylist
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            @Html.Hidden("StylistId", item.StylistId);
            <div class="col-md-6 col-lg-4">
                <div id="stylist_@item.StylistId">
                    <div class="card stylist-card h-100 border-0 background-primary">
                        <div class="card-body p-4">


                            <h5 class="card-title text-center fw-bold gradient-text mb-3">
                                @item.StylistName
                            </h5>



                            <div class="mb-2 small text-soft">
                                <strong>Timing:</strong>
                                @item.StartTime.ToString(@"hh\:mm")
                                –
                                @item.EndTime.ToString(@"hh\:mm")
                            </div>

                            <div class="mb-4">
                                <strong>Status:</strong>
                                <span class="badge rounded-pill @(item.IsActive ? "bg-success" : "bg-secondary")">
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>

                            <div class="d-flex gap-2 justify-content-center">
                                @Html.ActionLink(
                                    "Edit",
                                    "AddOrEditStylist",
                                    new { id = item.StylistId },
                                    new { @class = "btn btn-sm btn-outline-primary px-3" }
                                )

                                @Html.ActionLink(
                                    "Details",
                                    "Details",
                                    "StylistService",
                                    new { id = item.StylistId },
                                    new { @class = "btn btn-sm btn-warning px-3 text-dark" }
                                )
                            </div>

                        </div>
                    </div>
                </div>


            </div>
        }
    </div>
    @Html.ActionLink("← Back", "Index", "Account", null, new { @class = "btn btn-hover background-primary mt-4" })

</div>

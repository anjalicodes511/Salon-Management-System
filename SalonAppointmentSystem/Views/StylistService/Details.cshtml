@model SalonAppointmentSystem.Models.ViewModels.StylistDetailsVM

@{
    ViewBag.Title = "Stylist Details";
}
@Html.Partial("_Navbar")
<div class="container mt-4">

    <div class="card shadow-sm mb-4">
        <div class="card-header background-primary text-center text-white">
            <h3 class="mb-0">@Model.StylistName</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Working Hours:</strong> @Model.StartTime.ToString("hh\\:mm") - @Model.EndTime.ToString("hh\\:mm")</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="@Url.Action("Assign", "StylistService", new { id = Model.StylistId })" class="btn btn-hover background-primary">
                        <i class="bi bi-pencil-square"></i> Assign / Update Services
                    </a>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mb-3 color-primary fw-bold">Assigned Services</h3>

    @if (Model.Services != null && Model.Services.Any())
    {
        <div class="row">
            @foreach (var service in Model.Services)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mb-2">
                    <div class="card border-info h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h6 class="card-title mb-0">@service.ServiceName</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted"><em>No services assigned to this stylist yet.</em></p>
    }

    @Html.ActionLink("← Back", "Index", "Stylist", null, new { @class = "btn btn-hover background-primary mt-4" })

</div>

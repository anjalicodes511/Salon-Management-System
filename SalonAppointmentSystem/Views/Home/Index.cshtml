            content: "";
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 120px;
            height: 4px;
            background: linear-gradient(90deg, #5a189a, #c77dff);
            border-radius: 50px;
        }

        /* Title */
        .testimonial-section .section-title {
            color: #5A189A;
            font-weight: 800;
            font-size: 38px;
        }

        .testimonial-section .section-subtitle {
            color: #6c757d;
            font-size: 17px;
        }


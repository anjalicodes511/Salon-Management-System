<div class="hero-landing">
    <div class="hero-container">
        <div class="hero-text">
            <h1 class="salon-title pb-3">The Ivory Lounge</h1>
            <h3>Where Beauty Meets Perfection</h3>
            <p>
                Experience premium salon services crafted with care, elegance,
                and professional expertise. Book your appointment effortlessly.
            </p>
            <div class="hero-buttons">
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary-custom">
                    Login
                </a>
                <a href="@Url.Action("Signup", "Account")" class="btn btn-outline-custom">
                    Sign Up
                </a>
            </div>
        </div>

        <div class="hero-image">
            <img src="https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9"
                 alt="Salon Service">
        </div>
    </div>
</div>


<!-- SERVICES SECTION -->
<section class="home-services py-5" id="services">
    <div class="container text-center">

        <h2 class="services-title mb-4">Our Popular Services</h2>
        <p class="services-subtitle mb-5">
            A glimpse of what we offer.
        </p>

        <div class="row">

            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h5>Facial</h5>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h5>Hair Spa</h5>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h5>Keratin Treatment</h5>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h5>Full Body Massage</h5>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h5>Hair Straightening</h5>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="service-card">
                    <h5>Manicure</h5>
                </div>
            </div>

        </div>

        <!-- Login CTA -->
        <div class="mt-4">
            <p class="login-note">
                Login to explore our complete list of services.
            </p>
            <a href="@Url.Action("Login","Account")" class="btn explore-btn">
                Login Now
            </a>
        </div>

    </div>
</section>


<!-- FEATURES SECTION -->
<section class="features-section py-5 mb-5">
    <div class="container text-center">
        <h2 class="mb-4 section-title">Why Choose The Ivory Lounge?</h2>
        <p class="mb-5 text-muted">
            We combine luxury, technology, and expertise to deliver an exceptional salon experience.
        </p>

        <div class="row">

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-calendar-check feature-icon"></i>
                    <h5>Easy Online Booking</h5>
                    <p>Book appointments anytime with our seamless scheduling system.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-scissors feature-icon"></i>
                    <h5>Professional Stylists</h5>
                    <p>Experienced beauty experts dedicated to perfection and care.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-star feature-icon"></i>
                    <h5>Premium Services</h5>
                    <p>Luxury treatments using high-quality products and techniques.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-graph-up feature-icon"></i>
                    <h5>Smart Reports</h5>
                    <p>Advanced reporting system to track appointments and revenue.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-people feature-icon"></i>
                    <h5>Customer Management</h5>
                    <p>Manage customers, bookings, and preferences effortlessly.</p>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <i class="bi bi-shield-check feature-icon"></i>
                    <h5>Secure & Reliable</h5>
                    <p>Your data and bookings are protected with secure authentication.</p>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- TESTIMONIAL CAROUSEL SECTION -->

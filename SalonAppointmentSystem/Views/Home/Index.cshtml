        border-radius: 30px;
        color: white;
        position: relative;
        overflow: hidden;
        box-shadow: 0 30px 80px rgba(60, 9, 108, 0.25);
        transition: all 0.4s ease;
    }

        /* Subtle glow effect */
        .testimonial-card::after {
            content: "";
            position: absolute;
            top: -80px;
            right: -80px;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(255,255,255,0.15), transparent 70%);
            border-radius: 50%;
        }

        /* Hover effect */
        .testimonial-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 40px 100px rgba(60, 9, 108, 0.35);
        }


        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1200px;
        width: 100%;
        gap: 3rem;
        flex-wrap: wrap;
    }

    .hero-text {
        flex: 1;
    }

        .hero-text h3 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #D4AF7F;
            margin-bottom: 0.5rem;
        }


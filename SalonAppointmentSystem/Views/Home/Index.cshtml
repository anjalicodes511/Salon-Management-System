        background: linear-gradient(135deg, #240046 0%, #3c096c 40%, #5a189a 100%);
        border-radius: 40px;
        padding: 80px 20px;
        position: relative;
        overflow: hidden;
    }

        /* Optional subtle overlay glow */
        .features-section::before {
            content: "";
            position: absolute;

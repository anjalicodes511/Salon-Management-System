    ViewBag.Title = "Salon Management System";
}
<!-- TOP NAVBAR -->
<nav class="custom-navbar">
    <div class="nav-container">

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center"
           href="@Url.Action("Index","Home")">

            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTby64zasAs1lTq0YL-na8JZTwRBuVCojUhFg&s"
                 alt="The Ivory Lounge Logo"
                 class="nav-logo" />

            <span class="salon-brand">
                The Ivory Lounge
            </span>
        </a>

        <!-- Nav Links -->
        <div class="nav-links">
            <a href="@Url.Action("Index","Home")">Home</a>
            <a href="#services">Services</a>
            <a href="#testimonials">Testimonials</a>
            <a href="#address">Address</a>
        </div>

    </div>

                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="carousel-item">
                    <div class="testimonial-card mx-auto">
                        <div class="stars mb-3">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                        </div>

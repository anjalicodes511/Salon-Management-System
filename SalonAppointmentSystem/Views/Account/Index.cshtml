@{
    ViewBag.Title = "Home";
    var username = Session["Username"] as string;
}
@Html.Partial("_Header")
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center mb-4">
            <h2 class="fw-bold">Welcome, @username 👋</h2>
            <p class="text-muted">Manage your salon appointments with ease</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Book Appointment -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">📅 Book Appointment</h5>
                    <p class="card-text">
                        Schedule a service with your preferred stylist.
                    </p>
                    <a href="@Url.Action("Create", "Booking")" class="btn btn-primary">
                        Book Now
                    </a>
                </div>
            </div>
        </div>

        <!-- My Appointments -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">🧾 My Appointments</h5>
                    <p class="card-text">
                        View and manage your upcoming appointments.
                    </p>
                    <a href="@Url.Action("MyAppointments", "Booking")" class="btn btn-success">
                        View Appointments
                    </a>
                </div>
            </div>
        </div>

        <!-- Services -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">💇 Our Services</h5>
                    <p class="card-text">
                        Explore all salon services and pricing.
                    </p>
                    <a href="@Url.Action("Index", "Service")" class="btn btn-warning">
                        View Services
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

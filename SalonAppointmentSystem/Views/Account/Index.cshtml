@{
    ViewBag.Title = "Home";
    var username = Session["Username"] as string;
}

@Html.Partial("_Navbar")



@if (Session["Role"] != null && Session["Role"].ToString() == "Customer")
{
    <div class="container mt-5">

        <div class="text-center mb-5">

            <h1 class="hero-title">
                Welcome back, <span class="username">@username</span> ✨
            </h1>

            <p class="hero-subtitle">
                Your beauty journey starts here. Manage appointments effortlessly.
            </p>

        </div>


        <div class="row g-4">

            <!-- Book Appointment -->
            <div class="col-md-4">
                <div class="card dashboard-card h-100">
                    <div class="card-header gradient-purple text-center">
                        📅 Book Appointment
                    </div>
                    <div class="card-body text-center">
                        <p>Schedule a service with your preferred stylist.</p>
                        <a href="@Url.Action("Index", "Service")"
                           class="btn btn-light dashboard-btn">
                            Book Now
                        </a>
                    </div>
                </div>
            </div>

            <!-- Services -->
            <div class="col-md-4">
                <div class="card dashboard-card h-100">
                    <div class="card-header gradient-blue text-center">
                        💇 Our Services
                    </div>
                    <div class="card-body text-center">
                        <p>Explore salon services and pricing.</p>
                        <a href="@Url.Action("Index", "Service")"
                           class="btn btn-light dashboard-btn">
                            View Services
                        </a>
                    </div>
                </div>
            </div>

            <!-- My Appointments -->
            <div class="col-md-4">
                <div class="card dashboard-card h-100">
                    <div class="card-header gradient-green text-center">
                        🧾 My Appointments
                    </div>
                    <div class="card-body text-center">
                        <p>View and manage your upcoming appointments.</p>
                        <a href="@Url.Action("Appointments", "Appointment")"
                           class="btn btn-light dashboard-btn">
                            View Appointments
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

else if (Session["Role"] != null && Session["Role"].ToString() == "Admin")
{
<div class="container mt-2">

    <div class="text-center mb-5">

        <h1 class="hero-title">
            Welcome back, <span class="username">@username</span> ✨
        </h1>

        <p class="hero-subtitle">
            Manage your salon operations with ease
        </p>

    </div>

    <div class="row g-4 justify-content-center">

        <!-- Manage Appointments -->
        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-header gradient-purple text-center">
                    📅 Manage Appointments
                </div>
                <div class="card-body text-center">
                    <p>View, approve, or cancel customer appointments.</p>
                    <a href="@Url.Action("AllAppointments", "Appointment")"
                       class="btn btn-light dashboard-btn">
                        Manage Now
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Services -->
        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-header gradient-blue text-center">
                    💇 Manage Services
                </div>
                <div class="card-body text-center">
                    <p>Add, edit, or remove salon services and pricing.</p>
                    <a href="@Url.Action("Index", "Service")"
                       class="btn btn-light dashboard-btn">
                        Manage Services
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Stylists -->
        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-header gradient-orange text-center">
                    ✂️ Manage Stylists
                </div>
                <div class="card-body text-center">
                    <p>Add stylists, update info, and assign slots.</p>
                    <a href="@Url.Action("Index", "Stylist")"
                       class="btn btn-light dashboard-btn">
                        Manage Stylists
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Customers -->
        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-header gradient-green text-center">
                    👥 Manage Customers
                </div>
                <div class="card-body text-center">
                    <p>View registered customers and their details.</p>
                    <a href="@Url.Action("CustomerDetails", "Admin")"
                       class="btn btn-light dashboard-btn">
                        View Customers
                    </a>
                </div>
            </div>
        </div>

        <!-- Reports -->
        <div class="col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-header gradient-dark text-center">
                    📊 Reports
                </div>
                <div class="card-body text-center">
                    <p>Generate reports on appointments and revenue.</p>
                    <a href="@Url.Action("Reports", "Admin")"
                       class="btn btn-light dashboard-btn">
                        View Reports
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
}

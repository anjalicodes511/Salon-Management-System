@model SalonAppointmentSystem.Models.CustomerModel

@{
    ViewBag.Title = "Signup";
}
@*@Html.Partial("_Navbar")*@
@Html.Partial("_Header")

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center mx-auto col-md-5">
        @TempData["Error"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center mx-auto col-md-5">
        @TempData["Success"]
    </div>
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">

                <h3 class="text-center fw-bold mb-4 color-primary">
                    Create Your Account
                </h3>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                    <!-- Full Name -->
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.FullName, new { @class = "form-label required-label" })
                        @Html.EditorFor(m => m.FullName,
                            new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                    </div>

                    <!-- Email -->
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label required-label" })
                        @Html.EditorFor(m => m.Email,
                            new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <!-- Phone -->
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Phone, new { @class = "form-label required-label" })
                        @Html.EditorFor(m => m.Phone,
                            new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>

                    <!-- Gender -->
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Gender, new { @class = "form-label required-label" })
                        @Html.DropDownListFor(
                            m => m.Gender,
                            new SelectList(new[] { "Male", "Female", "Other" }),
                            "Select Gender",
                            new { @class = "form-control form-control-lg" })
                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                    </div>

                    <!-- Password -->
                    <div class="form-group mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label required-label" })
                        @Html.PasswordFor(m => m.Password,
                            new { @class = "form-control form-control-lg" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group mb-4">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label required-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword,
                            new { @class = "form-control form-control-lg" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>

                    <!-- Hidden fields -->
                    @Html.HiddenFor(m => m.Role, new { Value = "Customer" })
                    @Html.HiddenFor(m => m.IsActive, new { Value = true })

                    <input type="submit"
                           value="Register"
                           class="btn background-primary btn-lg w-100" />
                }

                <div class="text-center mt-3">
                    @Html.ActionLink("Already have an account? Login", "Login", "Account",
                        null, new { @class = "text-decoration-none color-primary" })
                </div>

            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<style>
    .required-label::after {
        content: " *";
        color: red;
        font-weight: bold;
    }
</style>
